---
// Features.astro
const features = [
  {
    icon: "zap",
    title: "On-Demand Generation",
    description: "Generate PDFs instantly with real-time API calls. Perfect for user-triggered documents like invoices, reports, and certificates."
  },
  {
    icon: "layers",
    title: "Batch Processing",
    description: "Process thousands of PDFs in background queues. Ideal for bulk operations like monthly statements or mass mailings."
  },
  {
    icon: "settings",
    title: "Highly Customizable",
    description: "Full control over layouts, styling, fonts, and content structure. Create exactly what you need with our flexible templating system."
  }
  // ,
  // {
  //   icon: "code",
  //   title: "Developer Friendly",
  //   description: "Simple REST API with comprehensive SDKs for popular languages. Get started in minutes with detailed documentation."
  // },
  // {
  //   icon: "shield",
  //   title: "Enterprise Security",
  //   description: "SOC 2 compliant with end-to-end encryption. Your sensitive data is protected with industry-standard security measures."
  // },
  // {
  //   icon: "globe",
  //   title: "Global CDN",
  //   description: "Lightning-fast delivery worldwide with our distributed infrastructure. Consistent performance regardless of location."
  // }
];

const getIconSVG = (iconName: string) => {
  const icons: Record<string, string> = {
    zap: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>`,
    layers: `<polygon points="12 2 2 7 12 12 22 7 12 2"/><polyline points="2,17 12,22 22,17"/><polyline points="2,12 12,17 22,12"/>`,
    settings: `<circle cx="12" cy="12" r="3"/><path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1 1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z"/>`,
    code: `<polyline points="16,18 22,12 16,6"/><polyline points="8,6 2,12 8,18"/>`,
    shield: `<path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>`,
    globe: `<circle cx="12" cy="12" r="10"/><line x1="2" y1="12" x2="22" y2="12"/><path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"/>`
  };
  return icons[iconName] || icons.zap;
};
---

<section id="features" class="py-20 bg-background">
  <div class="max-w-7xl mx-auto px-6">
    <div class="text-center mb-16">
      <h2 class="text-7xl font-bold mb-4">
        Everything you need for <span class="text-[#046C95] ">PDF generation</span>
      </h2>
      <p class="text-xl text-muted-foreground max-w-2xl mx-auto">
        Powerful features designed to handle any PDF generation scenario, from simple documents to complex enterprise workflows.
      </p>
    </div>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {features.map((feature) => (
        <div class="rounded-lg border border-gray-300 bg-card text-card-foreground shadow-sm hover:shadow-card transition-all duration-300 group">
          <div class="flex flex-col space-y-1.5 p-6">
            <div class="w-12 h-12 bg-[#046C95] rounded-lg flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
              <svg class="w-6 h-6 text-primary-foreground" fill="none" stroke="#FFF" viewBox="0 0 24 24">
                <Fragment set:html={getIconSVG(feature.icon)} />
              </svg>
            </div>
            <h3 class="text-xl font-semibold leading-none tracking-tight">{feature.title}</h3>
          </div>
          <div class="p-6 pt-0">
            <p class="text-muted-foreground leading-relaxed">
              {feature.description}
            </p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>