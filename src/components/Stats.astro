---
// Stats.astro
const stats = [
  {
    value: "10M+",
    label: "PDFs Generated",
    description: "Documents created monthly"
  },
  {
    value: "500+",
    label: "Active Users",
    description: "Developers worldwide"
  },
  {
    value: "99.9%",
    label: "Uptime SLA",
    description: "Reliable service"
  },
  {
    value: "50ms",
    label: "Avg Response",
    description: "Lightning fast generation"
  }
];
---

<section class="py-20 bg-gradient-secondary">
  <div class="max-w-7xl mx-auto px-6">
    <div class="grid grid-cols-2 lg:grid-cols-4 gap-8">
      {stats.map((stat) => (
        <div class="text-center">
          <div class="text-4xl lg:text-5xl font-bold text-primary mb-2">
            {stat.value}
          </div>
          <div class="text-lg font-semibold text-foreground mb-1">
            {stat.label}
          </div>
          <div class="text-sm text-muted-foreground">
            {stat.description}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>