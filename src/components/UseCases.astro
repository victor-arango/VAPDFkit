---
// UseCases.astro
const useCases = [
  {
    icon: "receipt",
    title: "Invoices & Receipts",
    description: "Generate professional invoices and receipts with custom branding and automatic calculations.",
    features: ["Custom templates", "Tax calculations", "Multiple currencies", "Automated numbering"]
  },
  {
    icon: "document-report",
    title: "Reports & Analytics",
    description: "Create detailed reports with charts, graphs, and dynamic data visualization.",
    features: ["Chart integration", "Data binding", "Scheduled generation", "Multi-format export"]
  },
  {
    icon: "certificate",
    title: "Certificates & Diplomas",
    description: "Design and generate certificates, diplomas, and awards with digital signatures.",
    features: ["Digital signatures", "Batch processing", "Variable data", "Security features"]
  },
  {
    icon: "contract",
    title: "Contracts & Legal",
    description: "Generate contracts, agreements, and legal documents with dynamic content.",
    features: ["Template library", "E-signature ready", "Version control", "Compliance tools"]
  }
];

function getIconSVG(iconName: string): string {
  const icons: Record<string, string> = {
    "receipt": `<path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M14 3v4a1 1 0 0 0 1 1h4" /><path d="M19 12v7a1.78 1.78 0 0 1 -3.1 1.4a1.65 1.65 0 0 0 -2.6 0a1.65 1.65 0 0 1 -2.6 0a1.65 1.65 0 0 0 -2.6 0a1.78 1.78 0 0 1 -3.1 -1.4v-14a2 2 0 0 1 2 -2h7l5 5v4.25" />`,
    "document-report": `<path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M10 3.2a9 9 0 1 0 10.8 10.8a1 1 0 0 0 -1 -1h-6.8a2 2 0 0 1 -2 -2v-7a.9 .9 0 0 0 -1 -.8" /><path d="M15 3.5a9 9 0 0 1 5.5 5.5h-4.5a1 1 0 0 1 -1 -1v-4.5" />`,
    "certificate": `<path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M15 15m-3 0a3 3 0 1 0 6 0a3 3 0 1 0 -6 0" /><path d="M13 17.5v4.5l2 -1.5l2 1.5v-4.5" /><path d="M10 19h-5a2 2 0 0 1 -2 -2v-10c0 -1.1 .9 -2 2 -2h14a2 2 0 0 1 2 2v10a2 2 0 0 1 -1 1.73" /><path d="M6 9l12 0" /><path d="M6 12l3 0" /><path d="M6 15l2 0" />`,
    "contract": `<path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M8 21h-2a3 3 0 0 1 -3 -3v-1h5.5" /><path d="M17 8.5v-3.5a2 2 0 1 1 2 2h-2" /><path d="M19 3h-11a3 3 0 0 0 -3 3v11" /><path d="M9 7h4" /><path d="M9 11h4" /><path d="M18.42 12.61a2.1 2.1 0 0 1 2.97 2.97l-6.39 6.42h-3v-3z" />`
  };
  return icons[iconName] || icons["document-report"];
}
---

<section class="py-20 bg-background">
  <div class="max-w-7xl mx-auto px-6">
    <div class="text-center mb-16">
      <h2 class="text-4xl lg:text-5xl font-bold text-foreground mb-4">
        Endless Possibilities
      </h2>
      <p class="text-xl text-muted-foreground max-w-3xl mx-auto">
        From simple receipts to complex reports, VAPDFKIT adapts to your specific use case with powerful customization options.
      </p>
    </div>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
      {useCases.map((useCase) => (
        <div class="group p-8 rounded-2xl bg-card border border-gray-400  transition-all duration-300 hover:shadow-card">
          <div class="w-16 h-16 bg-[#046C95] rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
          
             <svg class="w-12 h-12 text-primary-foreground" fill="none" stroke="#FFF" viewBox="0 0 24 24">
                <Fragment set:html={getIconSVG(useCase.icon)} />
              </svg>
          </div>
          
          <h3 class="text-xl font-bold text-foreground mb-3">
            {useCase.title}
          </h3>
          
          <p class="text-muted-foreground mb-6 leading-relaxed">
            {useCase.description}
          </p>
          
          <ul class="space-y-2">
            {useCase.features.map((feature) => (
              <li class="flex items-center text-sm">
                <svg class="w-4 h-4 text-primary mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                <span class="text-foreground">{feature}</span>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </div>
</section>